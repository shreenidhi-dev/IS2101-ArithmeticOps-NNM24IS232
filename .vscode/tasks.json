{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
    
            "label": "build and run C program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "non_Restoring.c",
                "-o",
                "non_Restoring.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the C file and create .exe"
        },
        {
            "label": "run program",
            "type": "shell",
            "command": ".\\non_Restoring.exe",
            "group": "none",
            "dependsOn": ["build and run C program"],
            "problemMatcher": []
        }
    ]
}
